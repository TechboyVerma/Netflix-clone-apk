<?xml version="1.0" encoding="utf-8"?>
<!-- The root layout for the Netflix app screen -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" tools:context=".netflix">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/top_nav"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Netflix logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="57dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/netflix" />

        <!-- Search icon, input field, and background -->
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:background="@drawable/search_bar"
            android:orientation="horizontal">

            <!-- Progress Bar (Initially set as invisible) -->

            <!-- Search icon -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/white"
                android:progressTint="@color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search_icon" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <!-- Search input field -->
            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="184dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:inputType="textWebEditText"
                android:textColor="@color/white"
                android:textColorHint="#ffff"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="60dp"

            android:layout_height="46dp"
            android:layout_gravity="right"

            android:src="@drawable/netflix" />

    </com.google.android.material.navigation.NavigationView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/black"
        android:paddingTop="5dp"
        app:itemIconSize="10pt"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_nav"
        app:layout_constraintVertical_bias="0.998"
        app:menu="@menu/nav_bottom" />


</androidx.constraintlayout.widget.ConstraintLayout>
